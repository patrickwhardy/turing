<h1>All Tools</h1>

<div class="notice">
  <%= flash[:notice] %>
</div>
<div class="error">
  <%= flash[:error] %>
</div>

<%= link_to "Create New Tool", new_user_tool_path %>

<div class="tool_info">
<% @tools.each do |tool| %>
  <p><%= link_to "#{tool.name}", user_tool_path(@user, tool) %>
  price: <%= tool.price %>
  quantity: <%= tool.quantity %></p>
<% end %>
</div>
